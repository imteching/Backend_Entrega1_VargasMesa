<h1>Carrito</h1>

{{#if products.length}}
    {{#each products}}
        <div class="cart-item">
            <h3>{{this.product.title}}</h3>
            <p>Precio: ${{this.product.price}}</p>
            <p>Cantidad: {{this.quantity}}</p>
        </div>
        {{/each}}
    {{else}}
        <p>El carrito está vacío</p>
    {{/if}}

    <a href="/products">Seguir comprando</a>